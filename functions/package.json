{
  "name": "functions",
  "engines": {
    "node": "8"
  },
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "gtfd": "cd functions",
    "goback": "cd ..",
    "predeploy": "firebase use clothxnet --token $FIREBASE_TOKEN $CI_ENVIRONMENT_SLUG",
    "deploy": "firebase deploy --only functions --non-interactive --token $FIREBASE_TOKEN_FOR_PRODUCTION",
    "test_server_deploy": "firebase deploy --only functions --non-interactive --token $FIREBASE_TOKEN_FOR_TESTING",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.7.0",
    "@sendgrid/mail": "^6.2.1",
    "algoliasearch": "^3.30.0",
    "asyncawait": "^1.0.7",
    "body-parser": "^1.18.3",
    "busboy": "^0.2.14",
    "camelcase": "5.0.0",
    "cloudinary": "^1.13.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase": "^5.1.0",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^2.2.0",
    "glob": "^7.1.3",
    "helmet": "^3.12.1",
    "nodemailer": "^4.6.5",
    "razorpay": "^2.0.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "private": true
}
