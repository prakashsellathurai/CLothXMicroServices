{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "gtfd": "cd functions",
    "goback": "cd ..",
    "predeploy": "firebase use clothxnet --token $FIREBASE_TOKEN $CI_ENVIRONMENT_SLUG",
    "deploy": "firebase deploy --only functions --non-interactive --token $FIREBASE_TOKEN",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.7.0",
    "busboy": "^0.2.14",
    "@sendgrid/mail": "^6.2.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.3",
    "firebase": "^5.1.0",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^1.0.3",
    "helmet": "^3.12.1",
    "jwt-simple": "^0.5.1",
    "nodemailer": "^4.6.5"
  },
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2017": "^6.24.1"
  }
