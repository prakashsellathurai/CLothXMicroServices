
extends layout

block content
    .container
      .py-5.text-center
        img.d-block.mx-auto.mb-4(src='https://www.clothx.net/assets/images/logo.png', alt='', width='72', height='72')
        h2 Add store Form
      .row
        .col-md-8.order-md-1
          form.needs-validation(id='form',novalidate='',method='POST',action='/submit',enctype='multipart/form-data')
            .row
            .mb-3
                label(for='storename')
                | Store name
                input#storename.form-control(type="text", placeholder='', required)
                .invalid-feedback
                  | store name  is required
            .mb-3
                label(for='ownername') Owner name
                input#ownername.form-control(type='text', placeholder='', value='', required)
                .invalid-feedback
                  | Valid first name is required.
            .mb-3
                 label(for='mobileno')
                 | Mobile No
                 input#mobileno.form-control(type='tel', required)
                 .invalid-feedback
                  | mobile no is required
            .mb-3
                label(for='email')
                | Email 
                input#email.form-control(type='email', placeholder='you@example.com'. required)
                .invalid-feedback
                | Please enter a valid email address for shipping updates.
            .mb-3 
                 label(for='proprietorname')
                 | Propriator Name
                 input#proprietorname.form-control(type="text", placeholder='')
            .mb-3
              label(for='address') Address
              input#address.form-control(type='text', placeholder='1234 Main St', required)
              .invalid-feedback
                | Please enter your shipping address.
            .row
              .col-md-3.mb-3
                label(for='district') District
                select#district.custom-select.d-block.w-100(required)
                  option(value='') Choose...
                  option coimbatore
                .invalid-feedback
                  | Please provide a valid state.
              .col-md-4.mb-3
                label(for='state') State
                select#state.custom-select.d-block.w-100(required)
                  option(value='') Choose...
                  option tamil nadu
                .invalid-feedback
                  | Please provide a valid state.
              .col-md-5.mb-3
                label(for='country') Country
                select#country.custom-select.d-block.w-100(required)
                  option(value='') Choose...
                  option India
                .invalid-feedback
                  | Please select a valid country.

            .mb-3
                label(for='zip') Zip
                input#zip.form-control(type='text', placeholder='', required)
                .invalid-feedback
                  | Zip code required.

            .mb-3
                 label(for='panno')
                 | Pan no
                 input#panno.form-control(type="text")
            .mb-3
                 label(for='noofbranches')
                 | No of  branches 
                 input#noofbranches.form-control(type="number")
            .mb-3
                 label(for='shopcontactno')
                 | Shop contact no
                 input#shopcontactno.form-control(type='tel')
            .mb-3
                 label(for='monthlyrevenue')
                 | Approx Mothly Revenue
                 input#monthlyrevenue.form-control(type='number')
            .mb-3
                 label(for='noofworkers')
                 | No of workers
                 input#noofworkers.form-control(type='number')
            .mb-3
                 label(for='noofusersrequired')
                 | Required No of users
                 input#noofusersrequired.form-control(type='number')
            style.
                .thumb {
                height: 75px;
                border: 1px solid #000;
                margin: 10px 5px 0 0;
                }
            input#files(type='file', name='files[]', multiple='')
              output#list
              script.
                function handleFileSelect(evt) {
                var files = evt.target.files; // FileList object
                // Loop through the FileList and render image files as thumbnails.
                for (var i = 0, f; f = files[i]; i++) {
                // Only process image files.
                if (!f.type.match('image.*')) {
                continue;
                }
                var reader = new FileReader();
                // Closure to capture the file information.
                reader.onload = (function(theFile) {
                return function(e) {
                // Render thumbnail.
                var span = document.createElement('span');
                span.innerHTML = ['<img class="thumb" src="', e.target.result,
                '" title="', escape(theFile.name), '"/>'].join('');
                document.getElementById('list').insertBefore(span, null);
                };
                })(f);
                // Read in the image file as a data URL.
                reader.readAsDataURL(f);
                }
                }
                document.getElementById('files').addEventListener('change', handleFileSelect, false);

            input#submit.btn.btn-primary.btn-lg.btn-block(type='submit',value='Submit')
