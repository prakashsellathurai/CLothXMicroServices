
extends layout

block content
    .container
      .py-5.text-center
        img.d-block.mx-auto.mb-4(src='https://www.clothx.net/assets/images/logo.png', alt='', width='72', height='72')
        h2 Add store Form
      .row
        .col-md-8.order-md-1
          h4.mb-3 Billing address
          form.needs-validation(novalidate='',enctype='multipart/form-data',method='POST',action='/submit')
            .row
            .mb-3
                label(for='shopname')
                | Shop name
                input#shopname.form-control(type="text", placeholder='', required)
                .invalid-feedback
                  | shop is required
            .mb-3
                label(for='ownername') Owner name
                input#ownername.form-control(type='text', placeholder='', value='', required)
                .invalid-feedback
                  | Valid first name is required.
            .mb-3
                label(for='email')
                | Email 
                span.text-muted (Optional)
                input#email.form-control(type='email', placeholder='you@example.com'. required)
              .invalid-feedback
                | Please enter a valid email address for shipping updates.
            .mb-3 
                 label(for='propriatorname')
                 | Propriator Name
                 input#propriatorname.form-control(type="text", placeholder='')
            .mb-3
              label(for='address') Address
              input#address.form-control(type='text', placeholder='1234 Main St', required)
              .invalid-feedback
                | Please enter your shipping address.
            .row
              .col-md-5.mb-3
                label(for='country') Country
                select#country.custom-select.d-block.w-100(required)
                  option(value='') Choose...
                  option India
                .invalid-feedback
                  | Please select a valid country.
              .col-md-4.mb-3
                label(for='state') State
                select#state.custom-select.d-block.w-100(required)
                  option(value='') Choose...
                  option tamil nadu
                .invalid-feedback
                  | Please provide a valid state.
              .col-md-3.mb-3
                label(for='zip') Zip
                input#zip.form-control(type='text', placeholder='', required)
                .invalid-feedback
                  | Zip code required.
            .mb-3
                 label(for='mobileno')
                 | Mobile No
                 input#mobileno.form-control(type='tel', required)
                 .invalid-feedback
                  | mobile no is required
            .mb-3
                 label(for='panno')
                 | Pan no
                 input#panno.form-control(type="text")
            .mb-3
                 label(for='noofbranches')
                 | No of  branches 
                 input#noofbranches.form-control(type="number")
            .mb-3
                 label(for='shopcontactno')
                 | Shop contact no
                 input#shopcontactno.form-control(type='tel')
            .mb-3
                 label(for='monthlyrevenue')
                 | Approx Mothly Revenue
                 input#monthlyrevenue.form-control(type='number')
            .mb-3
                 label(for='noofworkers')
                 | No of workers
                 input#noofworkers.form-control(type='number')
            .mb-3
                 label(for='noofusersrequired')
                 | Required No of users
                 input#noofusersrequired.form-control(type='number')
            .mb-3
                 label(for='coordinates')
                 input#coordinates.btn.btn-primary.btn-lg.btn-block.form-control(type="button", onclick='getLocation()', value="set position")  
                 p(id='geoloc')
                 script.
                    var x = document.getElementById("geoloc");
                    function getLocation() {
                    if (navigator.geolocation) {
                    navigator.geolocation.watchPosition(showPosition);
                    } else {
                    x.innerHTML = "Geolocation is not supported by this browser.";}
                    }
                    function showPosition(position) {
                      console.log(noofusersrequired)
                    x.innerHTML="Latitude: " + position.coords.latitude +
                    "<br>Longitude: " + position.coords.longitude;
                    }
            button.btn.btn-primary.btn-lg.btn-block(type='submit') Submit
      footer.my-5.pt-5.text-muted.text-center.text-small
        p.mb-1 Â© 2017-2018 Company Name
        ul.list-inline
          li.list-inline-item
            a(href='#') Privacy
          li.list-inline-item
            a(href='#') Terms
          li.list-inline-item
            a(href='#') Support
